    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left Section  -->
        <Border
            Padding="30"
            Background="#FFD500"
            CornerRadius="25 0 0 25">
            <StackPanel VerticalAlignment="Center">
                <Image
                    Width="160"
                    Height="160"
                    Margin="0,0,0,40"
                    Source="/Images/img.png" />

                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Foreground="#363636"
                    Text="Let's get you set up"
                    TextAlignment="Center" />
                <TextBlock
                    Margin="0,20,0,20"
                    FontSize="16"
                    Foreground="#363636"
                    Text="it should only take a couple of minutes to pair with your watch"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <Button Style="{StaticResource buttonBlack}">
                    <fa:ImageAwesome
                        Width="25"
                        Height="25"
                        Margin="3,0,0,0"
                        Foreground="#FFD500"
                        Icon="AngleRight" />
                </Button>
            </StackPanel>
        </Border>

        <!--  Input Section  -->
        <Border
            Grid.Column="1"
            Padding="20"
            Background="#ffffff"
            CornerRadius="0 25 25 0"
            MouseDown="Border_MouseDown">
            <Grid>

                <Grid
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Name" />
                    <TextBlock Grid.Row="1" Text="Family" />
                    <TextBlock Grid.Row="3" Text="Date of Birth" />
                    <TextBlock Grid.Row="4" Text="Email" />
                    <TextBlock Grid.Row="5" Text="Mobile" />
                    <TextBlock Grid.Row="6" Text="Membership" />

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="Karim" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="Doe" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Text="01/02/1980" />
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Text="KarimDoe@email.com" />
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Text="+91 9765 43210" />

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,10"
                        Orientation="Horizontal">
                        <fa:ImageAwesome Width="20" Icon="Male" />
                        <fa:ImageAwesome Width="20" Icon="Female" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="0,10"
                        Orientation="Horizontal">
                        <fa:ImageAwesome
                            Width="20"
                            Foreground="Gray"
                            Icon="CreditCard" />
                        <fa:ImageAwesome
                            Width="20"
                            Foreground="Silver"
                            Icon="CreditCard" />
                        <fa:ImageAwesome
                            Width="20"
                            Foreground="gold"
                            Icon="CreditCard" />
                    </StackPanel>

                    <Grid
                        Grid.Row="7"
                        Grid.Column="1"
                        Margin="0,40,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Margin="0,0,10,0" Content="Cancel" />

                        <Button
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Content="Save" />
                    </Grid>

                </Grid>
            </Grid>
        </Border>

    </Grid>

</UserControl>
