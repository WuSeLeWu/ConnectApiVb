<UserControl
    x:Class="EmployeeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:deneme"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="0,10,0,0">
        <Label
            Margin="10,29,35,0"
            Content="Employee"
            FontSize="28"
            Foreground="#DADADA" />
        <Button
            x:Name="btnLoad"
            Width="100"
            Margin="0,66,35,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#0BCDFF"
            Click="Btn_Load_Click"
            Content="Load"
            Foreground="White"
            RenderTransformOrigin="0.484,-5.774" />

        <Button
            x:Name="btnOpenEmployee"
            Width="100"
            Margin="0,66,170,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="green"
            Click="btnOpenEmployee_Click"
            Content="Save"
            Foreground="White"
            RenderTransformOrigin="0.484,-5.774" />

        <Border
            Margin="10,93,35,10"
            Padding="10"
            Background="white"
            CornerRadius="10">
            <DataGrid
                xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit"
                x:Name="dg"
                Margin="0,10,0,0"
                AutoGenerateColumns="False"
                Background="White"
                BorderThickness="0"
                CanUserAddRows="False"
                ColumnWidth="*"
                GridLinesVisibility="None"
                HeadersVisibility="Column"
                ItemsSource="{Binding Users}"
                RowHeaderWidth="0"
                ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1C2F46" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="Padding" Value="10,10,10,10" />
                        <Setter Property="FontFamily" Value="Montserrat" />
                        <Setter Property="FontSize" Value="15" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Margin" Value="10,2,0,10" />
                        <!--  Satır arka plan rengi  -->
                        <Setter Property="Foreground" Value="#121F2C" />

                        <!--  Satır metin rengi  -->
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <!--  Seçili satır arka plan rengi  -->
                                <Setter Property="Foreground" Value="#121F2C" />
                                <!--  Seçili satır metin rengi  -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Width="60"
                                    Background="blue"
                                    BorderThickness="0"
                                    Click="btnEdit_Click"
                                    Content="Edit"
                                    Foreground="white"
                                    Tag="{Binding Id}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="50"
                        Binding="{Binding Path=Id}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Path=Name}"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Path=Surname}"
                        Header="Surname" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Path=Username}"
                        Header="Username" />
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding Path=Email}"
                        Header="Email" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Path=Phone}"
                        Header="Phone" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Path=Gender}"
                        Header="Gender" />
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding Path=DepartmentName}"
                        Header="DepartmentName" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
